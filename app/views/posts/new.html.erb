<h1>Create new posts</h1>
<div class="crate_post">
  <%= form_for @post do |f| %>
    <div class="title">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: t(".title_placeholder") %>
    </div>
    <div class="form-group">
      <%= f.text_area :body, class: "ckeditor" %>
    </div>
    <div class="form-group">
      <%= f.submit t(".create_post") %>
    </div>
  <% end %>
</div>
